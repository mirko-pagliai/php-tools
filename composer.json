{
    "name": "mirko-pagliai/php-tools",
    "description": "Some essential tools for PHP",
    "homepage": "https://github.com/mirko-pagliai/php-tools",
    "type": "library",
    "license": "MIT",
    "authors": [{
        "name": "Mirko Pagliai",
        "email": "mirko.pagliai@gmail.com"
    }],
    "require": {
        "php": ">=5.6",
        "pguardiario/phpuri": "^1",
        "symfony/dom-crawler": "^3.4|^4.3",
        "symfony/filesystem": "^3.4|^4.3",
        "symfony/finder": "^3.4|^4.3"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "^3.0",
        "phpunit/phpunit": "^5.7.15|^6.0|^7.0",
        "symfony/var-dumper": "^3.4|^4.3"
    },
    "autoload": {
        "psr-4": {
            "Tools\\": "src"
        },
        "files": [
            "src/debug_functions.php",
            "src/filesystem_functions.php",
            "src/global_functions.php",
            "src/or_fail_functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tools\\Test\\": "tests/TestCase",
            "App\\": "tests/test_app"
        }
    }
}
